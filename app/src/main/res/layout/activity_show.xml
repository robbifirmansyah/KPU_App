<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowActivity"
    android:padding="40dp"
    android:background="@color/cream">

    <TextView
        android:id="@+id/title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DETAIL DATA PEMILIH"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@+id/title_main"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_blue"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/show_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_grey"
            android:text="Nama pemilih"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/show_nik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_grey"
            android:text="NIK"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/show_nama"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/show_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_grey"
            android:text="Gender"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/show_nik"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/show_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_grey"
            android:text="Alamat"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/show_gender"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"/>


        <Button
            android:id="@+id/btn_kembali"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="kembali"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
